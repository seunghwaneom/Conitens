{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "vibe-kit/config.schema.min.json",
  "title": "vibe-kit Minimum Configuration Schema",
  "description": "Minimum required configuration for vibe-kit compatibility across all language packs",
  "type": "object",
  "required": ["project_name", "root", "exclude_dirs", "include_globs"],
  "properties": {
    "project_name": {
      "type": "string",
      "description": "Project identifier",
      "minLength": 1
    },
    "root": {
      "type": "string",
      "description": "Project root directory",
      "default": "."
    },
    "exclude_dirs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Directories to exclude from indexing/analysis",
      "default": ["node_modules", ".git", ".vibe", "dist", "build", "out", "coverage", "__pycache__", ".venv", "venv"]
    },
    "include_globs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "File patterns to include in indexing",
      "default": ["**/*.py", "**/*.js", "**/*.ts"]
    },
    "quality_gates": {
      "type": "object",
      "properties": {
        "baseline_gate": {
          "type": "boolean",
          "description": "Block on error count increase (not on existence)",
          "default": true
        },
        "cycle_block": {
          "type": "boolean",
          "description": "Block commits with circular dependencies",
          "default": true
        },
        "complexity_warn_threshold": {
          "type": "integer",
          "description": "Cyclomatic complexity warning threshold",
          "default": 15
        }
      },
      "default": {
        "baseline_gate": true,
        "cycle_block": true,
        "complexity_warn_threshold": 15
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "latest_file": {
          "type": "string",
          "description": "Path to LATEST_CONTEXT.md",
          "default": ".vibe/context/LATEST_CONTEXT.md"
        },
        "max_recent_files": {
          "type": "integer",
          "description": "Number of recent files to track",
          "default": 12
        }
      },
      "default": {
        "latest_file": ".vibe/context/LATEST_CONTEXT.md",
        "max_recent_files": 12
      }
    }
  },
  "additionalProperties": true
}
